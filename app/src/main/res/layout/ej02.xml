<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ej02Activity">

    <LinearLayout
        android:id="@+id/uno"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#673AB7"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dos">

        <TextView
            android:id="@+id/ejercicio"
            android:text="Ejercicio 02"
            android:textSize="70sp"
            android:textColor="#CDDC39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dos"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#CDDC39"
        app:layout_constraintVertical_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/uno"
        app:layout_constraintBottom_toTopOf="@id/tres">

        <LinearLayout
            android:id="@+id/dos_uno"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/carta01"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/reverso"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dos_dos"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/carta02"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/reverso"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/dos_tres"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/carta03"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/reverso"/>

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/tres"
        android:orientation="horizontal"
        android:background="#673AB7"
        android:gravity="center"
        app:layout_constraintVertical_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/dos"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/desc"
            android:text="Â¡Elige una carta!"
            android:textSize="50sp"
            android:textColor="#CDDC39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

